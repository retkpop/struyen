<widget id="com.kieutam.app" version="1.0.3" versionCode="1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Struyen.Net</name>
    <description>
        Truyện Ngắn: Tuyển tập những truyện ngắn hay nhất, mới nhất
    </description>
    <author email="kvttam@gmail.com" href="http://kieutam.com">
        Kiều Tâm
    </author>
    <splash platform="android" qualifier="port-ldpi" src="www/res/screen/android/drawable-port-ldpi-screen.png" />
